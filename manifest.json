{
    "manifest_version": 3,
    "version": "1.1", 
    "name": "VSup",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["index.js"]
        }
    ],
    "background": {
        "service_worker": "background.js" 
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "VSup.png"
    }
}
